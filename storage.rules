rules_version = '2';

// Firebase Storage Security Rules - Basitleştirilmiş
service firebase.storage {
  match /b/{bucket}/o {
    // Tüm dosyalar için okuma izni - public erişim
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Test dosyaları için tam erişim
    match /test/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Public dosyalar
    match /public/{allPaths=**} {
      allow read, write: if true;
    }
  }
} 