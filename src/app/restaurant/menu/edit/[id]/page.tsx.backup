      newErrors.name = '√úr√ºn adƒ± gereklidir';
    }

    if (!formData.description.trim()) {
      newErrors.description = '√úr√ºn a√ßƒ±klamasƒ± gereklidir';
    }

    if (!formData.price || parseFloat(formData.price) <= 0) {
      newErrors.price = 'Ge√ßerli bir fiyat giriniz';
    }

    if (!formData.category) {
      newErrors.category = 'Kategori se√ßiniz';
    }

    if (!formData.preparationTime || parseInt(formData.preparationTime) <= 0) {
      newErrors.preparationTime = 'Ge√ßerli bir hazƒ±rlama s√ºresi giriniz';
    }

    setErrors(newErrors);
    return Object.keys(newErrors).length === 0;
  };

  // Form g√∂nderme
  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    
    if (!validateForm()) {
      return;
    }

    if (!restaurantId) {
      toast.error('Restoran bilgisi bulunamadƒ±');
      return;
    }

    setIsSubmitting(true);

    try {
      console.log('üîÑ √úr√ºn g√ºncelleniyor...', { productId, restaurantId, formData });
      
      let imageUrl = product?.image || '';
      
      // Yeni g√∂rsel y√ºklendiyse
      if (formData.image) {
        console.log('üì∏ Yeni g√∂rsel y√ºkleniyor...');
        
        // Eski g√∂rseli sil
        if (product?.image) {
          try {
            const oldImageRef = ref(storage, product.image);
            await deleteObject(oldImageRef);
            console.log('üóëÔ∏è Eski g√∂rsel silindi');
          } catch (error) {
            console.log('‚ö†Ô∏è Eski g√∂rsel silinirken hata (normal):', error);
          }
        }
        
        // Yeni g√∂rseli y√ºkle
