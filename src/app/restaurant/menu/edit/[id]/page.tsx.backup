const categories = [
  'Pizza',
  'Burger', 
  'D√∂ner',
  'Pide & Lahmacun',
  'Izgara',
  'Salata',
  'Tatlƒ±',
  'ƒ∞√ßecek',
  'Aperatif',
  'Ana Yemek'
];

const dietaryTags = [
  'Vejetaryen',
  'Vegan', 
  'Glutensiz',
  'Laktoz ƒ∞√ßermez',
  'Et',
  'Tavuk',
  'Balƒ±k',
  'Deniz √úr√ºnleri',
  'Acƒ±lƒ±',
  'Saƒülƒ±klƒ±',
  'Pop√ºler',
  'Yeni',
  'ƒ∞ndirimde'
];

// Ger√ßek √ºr√ºn verileri - Firebase'den y√ºklenecek
const useProductData = (productId: string, restaurantId: string) => {
  const [product, setProduct] = useState<any>(null);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    if (productId && restaurantId) {
      loadProductData(productId, restaurantId);
    }
  }, [productId, restaurantId]);

  const loadProductData = async (id: string, restaurantId: string) => {
    try {
      setLoading(true);
      console.log('üîÑ √úr√ºn verileri y√ºkleniyor...', { productId: id, restaurantId });
      
      const productRef = doc(db, 'restaurants', restaurantId, 'products', id);
      const productSnap = await getDoc(productRef);
      
      if (productSnap.exists()) {
        const productData = productSnap.data();
        console.log('‚úÖ √úr√ºn verileri y√ºklendi:', productData);
        setProduct({
          id: productSnap.id,
          ...productData
        });
      } else {
        console.error('‚ùå √úr√ºn bulunamadƒ±');
        toast.error('√úr√ºn bulunamadƒ±');
      }
    } catch (error) {
      console.error('‚ùå √úr√ºn verileri y√ºklenirken hata:', error);
      toast.error('√úr√ºn verileri y√ºklenirken hata olu≈ütu');
    } finally {
      setLoading(false);
    }
  };

  return { product, setProduct, loading };
};

export default function EditProductPage() {
  const router = useRouter();
  const params = useParams();
  const { user, loading: authLoading } = useAuth();
  const productId = params?.id as string;
  const restaurantId = user?.restaurantId;
  
  const { product, setProduct, loading: productLoading } = useProductData(productId, restaurantId || '');
  
  const [formData, setFormData] = useState({
    name: '',
    description: '',
    price: '',
    category: '',
    preparationTime: '',
    ingredients: '',
    tags: [] as string[],
    isActive: true,
    image: null as File | null
  });
